html, body, .app { height: 100% }

body {
  background-color: #000;
  color: #eee;
  padding: 0;
  margin: 0;
  height: 100%;
  font: 12px sans-serif;
}

.app {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: stretch;
  align-content: stretch;
}

.app h1 {
  height: 50px;
  line-height: 50px;
  margin: 0;
  padding: 0;
  background-color: #888;
  color: #000;
  text-align: center;
}

.app .main .workoutTitle {
  margin: 0;
  padding: 0;
  text-align: center;
  font-family: monospace;
  font-size: 2em;
}

.app .main .workout {
  display: block;
  width: 100%;
  height: 100px;
  margin: 2em 0;
}

.app .main .timers {
  width: 100%;
  margin: 2em 0;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: space-around;
}

.app .main .timer {
  display: block;
  flex-grow: 1;
  font-size: 1.25em;
  text-align: center;
  font-family: monospace;
  border: 1px solid #fff;
  // border-radius: 0.5em;
  margin: 0 0.5em;
  padding: 0.5em 0.25em;
  text-align: center;
}

.app .main .timer .title {
  display: block;
  font-size: 0.75em;
}

.app .main .timer.current {
  font-size: 2.5em;
}

.app footer {
  width: 100%;
  height: 50px;
  margin: 0;
  padding: 0;
  background-color: #666;
  color: #c000;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  align-content: stretch;
}

.app footer button {
  background-color: #666;
  flex-grow: 1;
  font-size: 2em;
  border: 1px solid #000;
  border-radius: 0;
}

.app.running footer button.playpause {
  color: #e33;
}

.app.stopped footer button.playpause {
  color: #3e3;
}
