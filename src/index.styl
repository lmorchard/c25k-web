html, body, .app { height: 100% }

body {
  background-color: #000;
  color: #eee;
  padding: 0;
  margin: 0;
  height: 100%;
  font: 12px sans-serif;
}

.app {
  width: 100%;

  h1 {
    display: block;
    position: fixed;
    left: 0; top: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    margin: 0;
    padding: 0;
    background-color: #888;
    color: #000;
    text-align: center;

    button.back {
      display: block;
      position: absolute;
      border: none;
      border-right: 1px solid #000;
      background-color: #888;
      left: 0; top: 0;
      width: 50px; height: 50px;
      font-size: 1em;
    }

  }

  section.main {
    height: 100%;
    margin-top: 50px;

    .workoutList {

      ul.workouts {
        margin: 1em; padding: 0;
        list-style-type: none;
        display: flex;
        flex-direction: column;

        li.workout {
          margin: 1em 0 0 0; padding: 0;

          .title {
            display: block;
            text-align: center;
            font-family: monospace;
            font-size: 1.5em;
          }

          .workoutBar {
            display: block;
            width: 85%;
            height: 25px;
            margin: 0.25em auto 0.25em auto;
          }

        }

      }

    }

    .workoutView {

      height: 100%;
      margin-bottom: 50px;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      align-content: center;

      h2 {
        margin: 0.5em 0 0 0;
        padding: 0;
        text-align: center;
        font-family: monospace;
        font-size: 2em;
      }

      section.bar {
        width: 100%;
        height: 100px;
      }

      section.timers {
        width: 100%;
        margin: 2em 0;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        align-content: flex-start;
        justify-content: space-around;

        .timer {
          display: block;
          flex-grow: 1;
          font-size: 1.25em;
          text-align: center;
          font-family: monospace;
          border: 1px solid #fff;
          // border-radius: 0.5em;
          margin: 0 0.5em;
          padding: 0.5em 0.25em;
          text-align: center;

          .title {
            display: block;
            font-size: 0.75em;
          }

        }

        .timer.current {
          font-size: 2.5em;
        }

      }

      audio { display: none }

      footer {
        display: block;
        position: fixed;
        left: 0; bottom: 0;
        width: 100%;
        height: 50px;

        margin: 0;
        padding: 0;
        background-color: #666;
        color: #c000;
        display: flex;
        flex-direction: row;
        align-items: stretch;
        align-content: stretch;

        button {
          background-color: #666;
          flex-grow: 1;
          font-size: 2em;
          border: 1px solid #000;
          border-radius: 0;
        }

      }

    }

    .workoutView.running {
      footer button.playpause {
        color: #e33;
      }
    }

    .workoutView.stopped {
      footer button.playpause {
        color: #3e3;
      }
    }

  }

}
