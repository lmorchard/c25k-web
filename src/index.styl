html, body, .app { height: 100% }

body {
  background-color: #000;
  color: #eee;
  padding: 0;
  margin: 0;
  height: 100%;
  font: 12px sans-serif;
}

.app {
  width: 100%;

  a {
    color: #ccc;
    font-weight: bold;
  }

  p {
    font-size: 1.25em;
    line-height: 1.5em;
  }

  h1 {
    display: block;
    position: fixed;
    left: 0; top: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    margin: 0;
    padding: 0;
    background-color: #888;
    color: #000;
    text-align: center;

    button {
      display: block;
      position: absolute;
      border: none;
      border-radius: 0;
      background: #888;
      width: 50px; height: 50px;
      font-size: 1em;
    }

    button.back {
      left: 0; top: 0;
      border-right: 1px solid #000;
    }

    button.help {
      right: 0; top: 0;
      border-left: 1px solid #000;
    }

  }

  &.home button.back {
    display: none;
  }

  &.help button.help {
    display: none;
  }

  section.main {
    height: 100%;
    // margin-top: 50px;

    .workoutList {
      margin-top: 50px;

      ul.workouts {
        margin: 0; padding: 0;
        list-style-type: none;
        display: flex;
        flex-direction: column;

        li.workout {
          cursor: pointer;

          min-height: 50px;
          margin: 1em 0 0 0; padding: 0 0 1em 0;
          border-bottom: 1px solid #666;

          .title {
            display: block;
            text-align: center;
            font-family: monospace;
            font-size: 1.5em;
          }

          .workoutBar {
            display: block;
            width: 85%;
            height: 25px;
            margin: 0.25em auto 0.25em auto;
          }

        }

      }

    }

    .helpView {
      margin-top: 50px;
      
      padding: 1em 2em;

      p code {
        border-radius: 0;
        background: #888;
        padding: 0 0.5em;
        color: #000;
        font-weight: bold;
      }

    }

    .workoutView {

      height: 100%;

      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      align-content: center;

      h2 {
        margin: 0.5em 0 0 0;
        padding: 0;
        text-align: center;
        font-family: monospace;
        font-size: 2em;
      }

      section.bar {
        width: 100%;
        height: 100px;
      }

      section.timers {
        width: 100%;
        margin: 2em 0;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        align-content: flex-start;
        justify-content: space-around;

        .timer {
          display: block;
          flex-grow: 1;
          font-size: 1.25em;
          text-align: center;
          font-family: monospace;
          border: 1px solid #fff;
          // border-radius: 0.5em;
          margin: 0 0.5em;
          padding: 0.5em 0.25em;
          text-align: center;

          .title {
            display: block;
            font-size: 0.75em;
          }

        }

        .timer.current {
          font-size: 2.5em;
        }

      }

      audio { display: none }

      footer {
        display: block;
        position: fixed;
        left: 0; bottom: 0;
        width: 100%;
        height: 50px;

        margin: 0;
        padding: 0;
        background-color: #666;
        color: #c000;
        display: flex;
        flex-direction: row;
        align-items: stretch;
        align-content: stretch;

        button {
          background: #666;
          flex-grow: 1;
          font-size: 2em;
          border: 1px solid #000;
          border-radius: 0;
          whitespace: no-wrap;
        }

        button.playpause { width: 50px; }
        button.playpause span { display: none; }

      }

    }

    .workoutView.running {
      footer {
        button.playpause { color: #ff4444; }
        button.playpause:before { content: '\2589'; }
      }
    }

    .workoutView.stopped {
      footer {
        button.playpause { color: #44ff44; }
        button.playpause:before { content: '\25ba'; }
      }
    }

  }

}
